<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_sw"
    android:layout_width="60dp"
    android:id="@+id/cl"
    android:layout_height="30dp">
    <View
        android:id="@+id/view_close"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bg_sw1"
        android:layout_marginStart="2dp"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginLeft="2dp" />

    <View
        android:id="@+id/view_open"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bg_sw1"
        android:layout_marginEnd="2dp"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp" />

    <TextView
        android:id="@+id/tv_close"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/view_close"
        app:layout_constraintTop_toTopOf="@id/view_close"
        app:layout_constraintEnd_toEndOf="@id/view_close"
        app:layout_constraintBottom_toBottomOf="@id/view_close"
        android:text="无声"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_open"
        app:layout_constraintStart_toStartOf="@id/view_open"
        app:layout_constraintTop_toTopOf="@id/view_open"
        app:layout_constraintEnd_toEndOf="@id/view_open"
        app:layout_constraintBottom_toBottomOf="@id/view_open"
        android:text="有声"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>